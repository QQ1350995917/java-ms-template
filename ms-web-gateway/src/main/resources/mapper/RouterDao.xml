<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pwd.initializr.gateway.persistence.dao.RouterDao">


  <resultMap id="RouterEntityMap"
    type="pwd.initializr.gateway.persistence.entity.RouterEntity">
    <result column="serial_number" jdbcType="BIGINT" property="serialNumber"/>
    <result column="router_json" jdbcType="LONGVARCHAR" property="routerJson"/>
    <result column="create_time" jdbcType="VARCHAR" property="createTime"/>
  </resultMap>

  <select id="createRouterTable">
    CREATE TABLE IF NOT EXISTS router(
     serial_number INT PRIMARY KEY     NOT NULL,
     router_json   TEXT                NOT NULL,
     create_time   CHAR(20)            NOT NULL
    );
  </select>

  <!--查询-->
  <select id="query" resultMap="RouterEntityMap">
    select serial_number, router_json, create_time from router;
  </select>

  <!--删除-->
  <delete id="delete">
    delete initializr_gateway.router;
  </delete>

  <!--删除-->
  <insert id="create" keyColumn="serial_number" keyProperty="serialNumber"
    parameterType="pwd.initializr.gateway.persistence.entity.RouterEntity">
    insert into router(serial_number,router_json,create_time)
    values (#{serialNumber},#{routerJson},#{createTime});
  </insert>


</mapper>
