<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pwd.initializr.edu.persistence.dao.GrammarBookDao">

  <resultMap id="GrammarBookMap" type="pwd.initializr.edu.persistence.entity.GrammarBookEntity">
    <result column="id" jdbcType="BIGINT" property="id"/>
    <result column="pid" jdbcType="BIGINT" property="pid"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="data" jdbcType="VARCHAR" property="data"/>
    <result column="leaf" jdbcType="INTEGER" property="leaf"/>
    <result column="able" jdbcType="INTEGER" property="able"/>
    <result column="del" jdbcType="INTEGER" property="del"/>
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    <result column="bpm_status" jdbcType="INTEGER" property="bpmStatus"/>
    <result column="order" jdbcType="INTEGER" property="order"/>
    <result column="zz_id" jdbcType="INTEGER" property="zzId"/>
    <result column="study_target" jdbcType="VARCHAR" property="studyTarget"/>
    <result column="will_study" jdbcType="VARCHAR" property="willStudy"/>
  </resultMap>

  <!--根据主键查询查询-->
  <select id="queryById" resultMap="GrammarBookMap">
    SELECT
      `id`,
      `pid`,
      `name`,
      `data`,
      `leaf`,
      `able`,
      `del`,
      `create_time`,
      `update_time`,
      `bpm_status`,
      `order`,
      `zz_id`,
      `study_target`,
      `will_study`
    FROM
      grammar_book
    WHERE
      id = #{id}
  </select>

  <!--查询指定行数据-->
  <select id="countByCondition" resultType="java.lang.Long">
    SELECT COUNT(*) FROM grammar_book
    <include refid="pwd.initializr.common.web.persistence.entity.ScopeEntity.entityQueryScope"></include>
  </select>

  <!--通过实体作为筛选条件查询-->
  <select id="queryByCondition" resultMap="GrammarBookMap">
    SELECT
      `id`,
      `pid`,
      `name`,
      `data`,
      `leaf`,
      `able`,
      `del`,
      `create_time`,
      `update_time`,
      `bpm_status`,
      `order`,
      `zz_id`,
      `study_target`,
      `will_study`
    FROM
      grammar_book
    <include refid="pwd.initializr.common.web.persistence.entity.ScopeEntity.entityQueryScope"></include>
    <include refid="pwd.initializr.common.web.persistence.entity.SortEntity.entityQuerySort"></include>
    LIMIT
      #{offset}, #{limit}
  </select>

  <!--新增所有列-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="pwd.initializr.edu.persistence.entity.GrammarBookEntity">
    INSERT INTO grammar_book
      (
        `id`,
        `pid`,
        `name`,
        `data`,
        `leaf`,
        `able`,
        `del`,
        `create_time`,
        `update_time`,
        `bpm_status`,
        `order`,
        `zz_id`,
        `study_target`,
        `will_study`
      )
    VALUES
      (
        #{entity.id},
        #{entity.pid},
        #{entity.name},
        #{entity.data},
        #{entity.leaf},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime},
        #{entity.bpmStatus},
        #{entity.order},
        #{entity.zzId},
        #{entity.studyTarget},
        #{entity.willStudy}
      )
  </insert>

  <!--新增所有列（批量新增）-->
  <insert id="insertByBatch" keyProperty="id" useGeneratedKeys="true" parameterType="pwd.initializr.edu.persistence.entity.GrammarBookEntity">
    INSERT INTO grammar_book
    (
        `id`,
        `pid`,
        `name`,
        `data`,
        `leaf`,
        `able`,
        `del`,
        `create_time`,
        `update_time`,
        `bpm_status`,
        `order`,
        `zz_id`,
        `study_target`,
        `will_study`
    )
    VALUES
    <foreach collection="entities" item="entity" separator=",">
    (
        #{entity.id},
        #{entity.pid},
        #{entity.name},
        #{entity.data},
        #{entity.leaf},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime},
        #{entity.bpmStatus},
        #{entity.order},
        #{entity.zzId},
        #{entity.studyTarget},
        #{entity.willStudy}
    )
    </foreach>
  </insert>

  <!--新增或者替换所有列-->
  <insert id="insertOrReplace" keyProperty="id" useGeneratedKeys="true" parameterType="pwd.initializr.edu.persistence.entity.GrammarBookEntity">
    REPLACE INTO grammar_book
    (
        `id`,
        `pid`,
        `name`,
        `data`,
        `leaf`,
        `able`,
        `del`,
        `create_time`,
        `update_time`,
        `bpm_status`,
        `order`,
        `zz_id`,
        `study_target`,
        `will_study`
    )
    VALUES
    (
        #{entity.id},
        #{entity.pid},
        #{entity.name},
        #{entity.data},
        #{entity.leaf},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime},
        #{entity.bpmStatus},
        #{entity.order},
        #{entity.zzId},
        #{entity.studyTarget},
        #{entity.willStudy}
    )
  </insert>

  <!--新增或者替换所有列（批量新增或者替换）-->
  <insert id="insertOrReplaceByBatch" keyProperty="id" useGeneratedKeys="true" parameterType="pwd.initializr.edu.persistence.entity.GrammarBookEntity">
    REPLACE INTO grammar_book
    (
        `id`,
        `pid`,
        `name`,
        `data`,
        `leaf`,
        `able`,
        `del`,
        `create_time`,
        `update_time`,
        `bpm_status`,
        `order`,
        `zz_id`,
        `study_target`,
        `will_study`
    )
    VALUES
    <foreach collection="entities" item="entity" separator=",">
      (
        #{entity.id},
        #{entity.pid},
        #{entity.name},
        #{entity.data},
        #{entity.leaf},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime},
        #{entity.bpmStatus},
        #{entity.order},
        #{entity.zzId},
        #{entity.studyTarget},
        #{entity.willStudy}
      )
    </foreach>
  </insert>

  <!--通过主键修改数据-->
  <update id="updateById" parameterType="pwd.initializr.edu.persistence.entity.GrammarBookEntity">
    UPDATE grammar_book
    <set>
      <if test="entity.id != null and entity.id != ''">
        `id` = #{entity.id},
      </if>
      <if test="entity.pid != null and entity.pid != ''">
        `pid` = #{entity.pid},
      </if>
      <if test="entity.name != null and entity.name != ''">
        `name` = #{entity.name},
      </if>
      <if test="entity.data != null and entity.data != ''">
        `data` = #{entity.data},
      </if>
      <if test="entity.leaf != null and entity.leaf != ''">
        `leaf` = #{entity.leaf},
      </if>
      <if test="entity.able != null and entity.able != ''">
        `able` = #{entity.able},
      </if>
      <if test="entity.del != null and entity.del != ''">
        `del` = #{entity.del},
      </if>
      <if test="entity.createTime != null and entity.createTime != ''">
        `create_time` = #{entity.createTime},
      </if>
      <if test="entity.updateTime != null and entity.updateTime != ''">
        `update_time` = #{entity.updateTime},
      </if>
      <if test="entity.bpmStatus != null and entity.bpmStatus != ''">
        `bpm_status` = #{entity.bpmStatus},
      </if>
      <if test="entity.order != null and entity.order != ''">
        `order` = #{entity.order},
      </if>
      <if test="entity.zzId != null and entity.zzId != ''">
        `zz_id` = #{entity.zzId},
      </if>
      <if test="entity.studyTarget != null and entity.studyTarget != ''">
        `study_target` = #{entity.studyTarget},
      </if>
      <if test="entity.willStudy != null and entity.willStudy != ''">
        `will_study` = #{entity.willStudy},
      </if>
    </set>
    WHERE
      id = #{entity.id}
  </update>

  <!--通过主键删除-->
  <update id="deleteById">
    UPDATE grammar_book
    SET
      del = 1,
      update_time = #{date}
    WHERE
      id = #{id}
  </update>

  <!--通过主键批量删除-->
  <update id="deleteByIds">
    UPDATE grammar_book
    SET
      del = 1,
      update_time = #{date}
    WHERE
      id in
    <foreach close=")" collection="ids" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

  <!--通过主键启禁-->
  <update id="ableById">
    UPDATE grammar_book
    SET
      able = #{able},
      update_time = #{date}
    WHERE
      id = #{id}
  </update>

  <!--通过主键批量启禁-->
  <update id="ableByIds">
    UPDATE grammar_book
    SET
      able = #{able},
      update_time = #{date}
    WHERE
      id in
    <foreach close=")" collection="ids" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

</mapper>
