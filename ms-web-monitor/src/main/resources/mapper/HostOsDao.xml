<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pwd.initializr.monitor.persistence.dao.HostOsDao">

  <resultMap id="HostOsMap" type="pwd.initializr.monitor.persistence.entity.HostOsEntity">
    <result column="id" jdbcType="VARCHAR" property="id"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="version" jdbcType="VARCHAR" property="version"/>
    <result column="arch" jdbcType="VARCHAR" property="arch"/>
    <result column="machine" jdbcType="VARCHAR" property="machine"/>
    <result column="description" jdbcType="VARCHAR" property="description"/>
    <result column="patch_level" jdbcType="VARCHAR" property="patchLevel"/>
    <result column="vendor" jdbcType="VARCHAR" property="vendor"/>
    <result column="vendor_version" jdbcType="VARCHAR" property="vendorVersion"/>
    <result column="vendor_name" jdbcType="VARCHAR" property="vendorName"/>
    <result column="vendor_code_name" jdbcType="VARCHAR" property="vendorCodeName"/>
    <result column="data_model" jdbcType="VARCHAR" property="dataModel"/>
    <result column="cpu_endian" jdbcType="VARCHAR" property="cpuEndian"/>
    <result column="able" jdbcType="INTEGER" property="able"/>
    <result column="del" jdbcType="INTEGER" property="del"/>
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
  </resultMap>

  <!--根据主键查询查询-->
  <select id="queryById" resultMap="HostOsMap">
    SELECT
      `id`,
      `name`,
      `version`,
      `arch`,
      `machine`,
      `description`,
      `patch_level`,
      `vendor`,
      `vendor_version`,
      `vendor_name`,
      `vendor_code_name`,
      `data_model`,
      `cpu_endian`,
      `able`,
      `del`,
      `create_time`,
      `update_time`
    FROM
      host_os
    WHERE
      id = #{id}
  </select>

  <!--查询指定行数据-->
  <select id="countByCondition" resultType="java.lang.Long">
    SELECT COUNT(*) FROM host_os
    <include refid="pwd.initializr.common.web.persistence.entity.ScopeEntity.entityQueryScope"></include>
  </select>

  <!--通过实体作为筛选条件查询-->
  <select id="queryByCondition" resultMap="HostOsMap">
    SELECT
      `id`,
      `name`,
      `version`,
      `arch`,
      `machine`,
      `description`,
      `patch_level`,
      `vendor`,
      `vendor_version`,
      `vendor_name`,
      `vendor_code_name`,
      `data_model`,
      `cpu_endian`,
      `able`,
      `del`,
      `create_time`,
      `update_time`
    FROM
      host_os
    <include refid="pwd.initializr.common.web.persistence.entity.ScopeEntity.entityQueryScope"></include>
    <include refid="pwd.initializr.common.web.persistence.entity.SortEntity.entityQuerySort"></include>
    LIMIT
      #{offset}, #{limit}
  </select>

  <!--新增所有列-->
  <insert id="insert" keyProperty="id">
    INSERT INTO host_os
      (
        `id`,
        `name`,
        `version`,
        `arch`,
        `machine`,
        `description`,
        `patch_level`,
        `vendor`,
        `vendor_version`,
        `vendor_name`,
        `vendor_code_name`,
        `data_model`,
        `cpu_endian`,
        `able`,
        `del`,
        `create_time`,
        `update_time`
      )
    VALUES
      (
        #{entity.id},
        #{entity.name},
        #{entity.version},
        #{entity.arch},
        #{entity.machine},
        #{entity.description},
        #{entity.patchLevel},
        #{entity.vendor},
        #{entity.vendorVersion},
        #{entity.vendorName},
        #{entity.vendorCodeName},
        #{entity.dataModel},
        #{entity.cpuEndian},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime}
      )
  </insert>

  <!--新增或者根据ID替换所有列-->
  <insert id="insertOrReplace" keyProperty="id">
    REPLACE INTO host_os
      (
        `id`,
        `name`,
        `version`,
        `arch`,
        `machine`,
        `description`,
        `patch_level`,
        `vendor`,
        `vendor_version`,
        `vendor_name`,
        `vendor_code_name`,
        `data_model`,
        `cpu_endian`,
        `able`,
        `del`,
        `create_time`,
        `update_time`
      )
    VALUES
      (
        #{entity.id},
        #{entity.name},
        #{entity.version},
        #{entity.arch},
        #{entity.machine},
        #{entity.description},
        #{entity.patchLevel},
        #{entity.vendor},
        #{entity.vendorVersion},
        #{entity.vendorName},
        #{entity.vendorCodeName},
        #{entity.dataModel},
        #{entity.cpuEndian},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime}
      )
  </insert>

  <!--通过主键修改数据-->
  <update id="updateById">
    UPDATE host_os
    <set>
      <if test="entity.id != null and entity.id != ''">
        `id` = #{entity.id},
      </if>
      <if test="entity.name != null and entity.name != ''">
        `name` = #{entity.name},
      </if>
      <if test="entity.version != null and entity.version != ''">
        `version` = #{entity.version},
      </if>
      <if test="entity.arch != null and entity.arch != ''">
        `arch` = #{entity.arch},
      </if>
      <if test="entity.machine != null and entity.machine != ''">
        `machine` = #{entity.machine},
      </if>
      <if test="entity.description != null and entity.description != ''">
        `description` = #{entity.description},
      </if>
      <if test="entity.patchLevel != null and entity.patchLevel != ''">
        `patch_level` = #{entity.patchLevel},
      </if>
      <if test="entity.vendor != null and entity.vendor != ''">
        `vendor` = #{entity.vendor},
      </if>
      <if test="entity.vendorVersion != null and entity.vendorVersion != ''">
        `vendor_version` = #{entity.vendorVersion},
      </if>
      <if test="entity.vendorName != null and entity.vendorName != ''">
        `vendor_name` = #{entity.vendorName},
      </if>
      <if test="entity.vendorCodeName != null and entity.vendorCodeName != ''">
        `vendor_code_name` = #{entity.vendorCodeName},
      </if>
      <if test="entity.dataModel != null and entity.dataModel != ''">
        `data_model` = #{entity.dataModel},
      </if>
      <if test="entity.cpuEndian != null and entity.cpuEndian != ''">
        `cpu_endian` = #{entity.cpuEndian},
      </if>
      <if test="entity.able != null and entity.able != ''">
        `able` = #{entity.able},
      </if>
      <if test="entity.del != null and entity.del != ''">
        `del` = #{entity.del},
      </if>
      <if test="entity.createTime != null and entity.createTime != ''">
        `create_time` = #{entity.createTime},
      </if>
      <if test="entity.updateTime != null and entity.updateTime != ''">
        `update_time` = #{entity.updateTime},
      </if>
    </set>
    WHERE
      id = #{entity.id}
  </update>

  <!--通过主键删除-->
  <update id="deleteById">
    UPDATE host_os
    SET
      del = 1,
      update_time = now()
    WHERE
      id = #{id}
  </update>

  <!--通过主键批量删除-->
  <update id="deleteByIds">
    UPDATE host_os
    SET
      del = 1,
      update_time = now()
    WHERE
      id in
    <foreach close=")" collection="ids" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

  <!--通过主键启禁-->
  <update id="ableById">
    UPDATE host_os
    SET
      able = #{able},
      update_time = now()
    WHERE
      id = #{id}
  </update>

  <!--通过主键批量启禁-->
  <update id="ableByIds">
    UPDATE host_os
    SET
      able = #{able},
      update_time = now()
    WHERE
      id in
    <foreach close=")" collection="ids" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

</mapper>
