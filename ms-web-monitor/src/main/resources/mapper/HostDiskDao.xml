<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pwd.initializr.monitor.persistence.dao.HostDiskDao">

  <resultMap id="HostDiskMap" type="pwd.initializr.monitor.persistence.entity.HostDiskEntity">
    <result column="id" jdbcType="VARCHAR" property="id"/>
    <result column="dev_name" jdbcType="VARCHAR" property="devName"/>
    <result column="dir_name" jdbcType="VARCHAR" property="dirName"/>
    <result column="type_name" jdbcType="VARCHAR" property="typeName"/>
    <result column="sys_type_name" jdbcType="VARCHAR" property="sysTypeName"/>
    <result column="options" jdbcType="VARCHAR" property="options"/>
    <result column="type" jdbcType="INTEGER" property="type"/>
    <result column="flags" jdbcType="BIGINT" property="flags"/>
    <result column="able" jdbcType="INTEGER" property="able"/>
    <result column="del" jdbcType="INTEGER" property="del"/>
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
  </resultMap>

  <!--根据主键查询查询-->
  <select id="queryById" resultMap="HostDiskMap">
    SELECT
      `id`,
      `dev_name`,
      `dir_name`,
      `type_name`,
      `sys_type_name`,
      `options`,
      `type`,
      `flags`,
      `able`,
      `del`,
      `create_time`,
      `update_time`
    FROM
      host_disk
    WHERE
      id = #{id}
  </select>

  <!--查询指定行数据-->
  <select id="countByCondition" resultType="java.lang.Long">
    SELECT COUNT(*) FROM host_disk
    <include refid="pwd.initializr.common.web.persistence.entity.ScopeEntity.entityQueryScope"></include>
  </select>

  <!--通过实体作为筛选条件查询-->
  <select id="queryByCondition" resultMap="HostDiskMap">
    SELECT
      `id`,
      `dev_name`,
      `dir_name`,
      `type_name`,
      `sys_type_name`,
      `options`,
      `type`,
      `flags`,
      `able`,
      `del`,
      `create_time`,
      `update_time`
    FROM
      host_disk
    <include refid="pwd.initializr.common.web.persistence.entity.ScopeEntity.entityQueryScope"></include>
    <include refid="pwd.initializr.common.web.persistence.entity.SortEntity.entityQuerySort"></include>
    LIMIT
      #{offset}, #{limit}
  </select>

  <!--新增所有列-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    INSERT INTO host_disk
      (
        `id`,
        `dev_name`,
        `dir_name`,
        `type_name`,
        `sys_type_name`,
        `options`,
        `type`,
        `flags`,
        `able`,
        `del`,
        `create_time`,
        `update_time`
      )
    VALUES
      (
        #{entity.id},
        #{entity.devName},
        #{entity.dirName},
        #{entity.typeName},
        #{entity.sysTypeName},
        #{entity.options},
        #{entity.type},
        #{entity.flags},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime}
      )
  </insert>

  <!--新增所有列-->
  <insert id="insertOrReplace" keyProperty="id" useGeneratedKeys="true">
    REPLACE INTO host_disk
      (
        `id`,
        `dev_name`,
        `dir_name`,
        `type_name`,
        `sys_type_name`,
        `options`,
        `type`,
        `flags`,
        `able`,
        `del`,
        `create_time`,
        `update_time`
      )
    VALUES
      (
        #{entity.id},
        #{entity.devName},
        #{entity.dirName},
        #{entity.typeName},
        #{entity.sysTypeName},
        #{entity.options},
        #{entity.type},
        #{entity.flags},
        #{entity.able},
        #{entity.del},
        #{entity.createTime},
        #{entity.updateTime}
      )
  </insert>

  <!--通过主键修改数据-->
  <update id="updateById">
    UPDATE host_disk
    <set>
      <if test="entity.id != null and entity.id != ''">
        `id` = #{entity.id},
      </if>
      <if test="entity.devName != null and entity.devName != ''">
        `dev_name` = #{entity.devName},
      </if>
      <if test="entity.dirName != null and entity.dirName != ''">
        `dir_name` = #{entity.dirName},
      </if>
      <if test="entity.typeName != null and entity.typeName != ''">
        `type_name` = #{entity.typeName},
      </if>
      <if test="entity.sysTypeName != null and entity.sysTypeName != ''">
        `sys_type_name` = #{entity.sysTypeName},
      </if>
      <if test="entity.options != null and entity.options != ''">
        `options` = #{entity.options},
      </if>
      <if test="entity.type != null and entity.type != ''">
        `type` = #{entity.type},
      </if>
      <if test="entity.flags != null and entity.flags != ''">
        `flags` = #{entity.flags},
      </if>
      <if test="entity.able != null and entity.able != ''">
        `able` = #{entity.able},
      </if>
      <if test="entity.del != null and entity.del != ''">
        `del` = #{entity.del},
      </if>
      <if test="entity.createTime != null and entity.createTime != ''">
        `create_time` = #{entity.createTime},
      </if>
      <if test="entity.updateTime != null and entity.updateTime != ''">
        `update_time` = #{entity.updateTime},
      </if>
    </set>
    WHERE
      id = #{id}
  </update>

  <!--通过主键删除-->
  <update id="deleteById">
    UPDATE host_disk
    SET
      del = 1,
      update_time = now()
    WHERE
      id = #{id}
  </update>

  <!--通过主键批量删除-->
  <update id="deleteByIds">
    UPDATE host_disk
    SET
      del = 1,
      update_time = now()
    WHERE
      id in
    <foreach close=")" collection="ids" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

  <!--通过主键启禁-->
  <update id="ableById">
    UPDATE host_disk
    SET
      able = #{able},
      update_time = now()
    WHERE
      id = #{id}
  </update>

  <!--通过主键批量启禁-->
  <update id="ableByIds">
    UPDATE host_disk
    SET
      able = #{able},
      update_time = now()
    WHERE
      id in
    <foreach close=")" collection="ids" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

</mapper>
